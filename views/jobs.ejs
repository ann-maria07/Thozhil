<!DOCTYPE html>
<html>
<head>
  <title>Jobs Posted by Employer</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      background-image: url("images/backg.jpeg");
      margin: 0;
      padding: 20px;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-top: 50px;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 30px 0;
    }

    li {
      background-color: rgba(224, 224, 224, 0.8); /* Transparent background */
      border-radius: 5px;
      padding: 20px;
      margin-bottom: 20px;
    }

    li:last-child {
      margin-bottom: 0;
    }

    p {
      margin: 10px 0;
      color: #000000;
    }

    strong {
      font-weight: bold;
      display: inline-block;
      width: 150px;
    }

    span {
      display: inline-block;
    }

    a.edit-link {
      padding: 10px;
      font-size: 16px;
      color: orangered;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
      text-transform: uppercase;
      text-decoration: none;
      position: relative;
    }

    a.edit-link:hover {
      text-decoration: none;
    }

    a.edit-link::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: -2px;
      left: 0;
      background-color: orangered;
      transform: scaleX(0);
      transform-origin: center;
      transition: transform 0.3s ease;
    }

    a.edit-link:hover::after {
      transform: scaleX(1);
    }

    /* Logout button styles */
    .logout-button {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: #000000;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    .logout-button:hover {
      background-color: #2c2c2c;
    }
  </style>
</head>
<body>
  <!-- Add the logout button at the top right corner -->
  <button class="logout-button" onclick="logout()">Logout</button>

  <h1>Jobs Posted by You</h1>

  <ul>
    <% jobs.forEach((job) => { %>
      <li>
        <p><strong>Full Name:</strong><span><%= job.fullName %></span></p>
        <p><strong>Email:</strong><span><%= job.email %></span></p>
        <p><strong>Mobile Number:</strong><span><%= job.mobileNumber %></span></p>
        <p><strong>Job-Type:</strong><span><%= job.jobType %></span></p>
        <p><strong>Company Name:</strong><span><%= job.companyName %></span></p>
        <p><strong>Location:</strong><span><%= job.location %></span></p>
        <p><strong>Salary:</strong><span><%= job.salary %></span></p>
        <p><strong>Job Description:</strong><span><%= job.jobDescription %></span></p>
        <p><strong>Job Name:</strong><span><%= job.jobName %></span></p>
        <p><strong>Vacancies:</strong><span><%= job.vacancies %></span></p>
        <a class="edit-link" href="/jobs/<%= job._id %>/edit">Edit</a>
      </li>
    <% }); %>
  </ul>

  <script>
    // JavaScript function to handle logout
    function logout() {
      // Perform logout actions here, such as clearing session data, redirecting, etc.
      // Example:
      // Clear session storage
      sessionStorage.clear();
      // Redirect to the login page
      window.location.href = 'index';
    }
  </script>
</body>
</html>
